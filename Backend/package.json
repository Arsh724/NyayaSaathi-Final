{
  "name": "nyayasaathi-backend",
  "version": "1.0.0",
  "description": "NyayaSaathi Backend API Server",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "debug": "node --inspect src/server.js",
    "setup": "node src/utils/setupDirectories.js",
    "cleanup": "node -e \"import('./src/utils/setupDirectories.js').then(m => m.cleanupOldTempFiles())\"",
    "health": "node -e \"import('./src/utils/setupDirectories.js').then(m => m.checkDirectoriesHealth())\"",
    "seed": "node seed.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "legal",
    "nyayasaathi",
    "backend",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Ankur Mittal",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^25.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
